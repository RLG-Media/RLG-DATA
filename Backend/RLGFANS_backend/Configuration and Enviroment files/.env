# Flask Application Configuration
FLASK_APP=app
FLASK_ENV=development  # Change to 'production' when deploying
SECRET_KEY=your_flask_secret_key  # Flask secret key for session management

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/rlg_fans_data  # Update with your actual DB credentials

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key  # Strong secret key for JWT token encoding/decoding

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Stripe API Keys
STRIPE_PUBLISHABLE_KEY=your_publishable_key
STRIPE_SECRET_KEY=your_secret_key

# Mail Server Configuration (for sending emails)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com  # Sender's email
MAIL_PASSWORD=your_email_password  # Use an app-specific password if using Gmail
MAIL_DEFAULT_SENDER=your_email@gmail.com

# Sentry DSN (for error logging and monitoring)
SENTRY_DSN=your_sentry_dsn_key

# API Keys for Integrated Services
ONLYFANS_API_KEY=your_onlyfans_token
STRIPCHAT_API_KEY=your_stripchat_token
