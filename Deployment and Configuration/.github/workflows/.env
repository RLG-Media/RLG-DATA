# General Application Settings
APP_NAME="RLG Platform"
ENVIRONMENT="production"  # Options: development, staging, production
DEBUG=False

# Secret Keys
SECRET_KEY="your-secret-key-goes-here"
JWT_SECRET_KEY="your-jwt-secret-key-goes-here"

# Database Configuration
DB_HOST="localhost"
DB_PORT=5432
DB_NAME_RLG_DATA="rlg_data_db"
DB_NAME_RLG_FANS="rlg_fans_db"
DB_USER="rlg_user"
DB_PASSWORD="secure-password"

# Cache Configuration
REDIS_URL="redis://localhost:6379/0"

# WebSocket Configuration
WEBSOCKET_URL="ws://localhost:8000"
WEBSOCKET_CHANNEL_RLG_DATA="rlg_data_channel"
WEBSOCKET_CHANNEL_RLG_FANS="rlg_fans_channel"

# API Keys
GOOGLE_API_KEY="your-google-api-key"
FACEBOOK_API_KEY="your-facebook-api-key"
TWITTER_API_KEY="your-twitter-api-key"
INSTAGRAM_API_KEY="your-instagram-api-key"

# External Service Configuration
FANFIX_API_KEY="your-fanfix-api-key"
FANSLY_API_KEY="your-fansly-api-key"
PATREON_API_KEY="your-patreon-api-key"

# Email Configuration
EMAIL_HOST="smtp.mailtrap.io"
EMAIL_PORT=587
EMAIL_HOST_USER="your-email-username"
EMAIL_HOST_PASSWORD="your-email-password"
EMAIL_USE_TLS=True

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FILE="/var/log/rlg_platform.log"

# Frontend Configuration
FRONTEND_URL_RLG_DATA="https://rlgdata.example.com"
FRONTEND_URL_RLG_FANS="https://rlgfans.example.com"

# OAuth Credentials (Example for Google Sign-In)
OAUTH_GOOGLE_CLIENT_ID="your-google-client-id"
OAUTH_GOOGLE_CLIENT_SECRET="your-google-client-secret"
OAUTH_REDIRECT_URI="https://your-app.example.com/oauth/callback"

# Stripe Payment Configuration
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLIC_KEY="your-stripe-public-key"

# Features Toggles
ENABLE_ANALYTICS=True
ENABLE_REALTIME_UPDATES=True
ENABLE_FAN_ENGAGEMENT=True

# Miscellaneous
DEFAULT_TIMEZONE="UTC"
SUPPORT_EMAIL="support@rlgplatform.com"

LOG_LEVEL=DEBUG
LOG_DIR=logs
ENABLE_EMAIL_LOGGING=True
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=your_email@example.com
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_password
LOG_RECIPIENTS=admin1@example.com,admin2@example.com

ENABLE_SENTRY=true
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_TRACES_SAMPLE_RATE=1.0

PROMETHEUS_SCRAPE_INTERVAL=15  # Example configuration for Prometheus

DEEPSEEK_API_KEY=your_api_key
GEOIP_DB_PATH=./resources/GeoLite2-City.mmdb